[color]
	ui = auto
[diff]
	tool = vimdiff
	algorithm = patience
	guitool = kdiff3
[diff "ansible-vault"]
	textconv = ansible-vault view
	cachetextconv = false
[diff "gpg"]
	textconv = gpg --no-tty --decrypt
	cachetextconv = false
[difftool]
	prompt = false
[alias]
	d = difftool
	graph = log --graph --oneline --decorate
[push]
	default = simple
[web]
	browser = xdg-open
[commit]
	gpgsign = true
[magit]
	hideCampaign = true
[github]
	user = dpflug
[pull]
	ffonly = true
[include]
	path = .gitconfig.local
[merge]
	tool = kdiff3
[mergetool "kdiff3"]
	path = C:/Program Files/KDiff3/kdiff3.exe
[difftool "kdiff3"]
	path = C:/Program Files/KDiff3/kdiff3.exe
[core]
	editor = \"C:/Program Files (x86)/GitExtensions/GitExtensions.exe\" fileeditor
